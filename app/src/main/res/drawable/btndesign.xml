<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color layer -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Transparent color to allow tinting -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#C0C0C0"/> <!-- Border color -->
        </shape>
    </item>

    <!-- Shape layer for rounded corners and border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- This allows tinting to take effect -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#C0C0C0"/> <!-- Border color -->
        </shape>
    </item>
</layer-list>
